pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
		sh 'mvn package'
            }
        }
        stage('test') {
            steps {
                echo 'Building..'
		sh '/usr/share/maven/bin/mvn test'
            }
        }
        stage('delopy') {
            steps {
                echo 'Deploying....'
		sshagent(['jenkins']) {
		sh "scp -o StrictHostKeyChecking=no /var/lib/jenkins/workspace/Jenkins-GitHub/target/webapp-0.2.war centos@44.197.241.202:/home/centos/apache-tomcat-10.0.27/webapps"
		 }
            }
        }
    }
}
